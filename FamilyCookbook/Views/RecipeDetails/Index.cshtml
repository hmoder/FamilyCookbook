@model IEnumerable<FamilyCookbook.Models.EntityFramework.RECIPE>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SERVING_SIZE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SERVING_UNIT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.INSTRUCTIONS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AUTHOR.FIRST_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AUTHOR.LAST_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY.DESCRIPTION)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SERVING_SIZE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SERVING_UNIT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INSTRUCTIONS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AUTHOR.FIRST_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AUTHOR.LAST_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY.DESCRIPTION)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RECIPE_ID })
            </td>
        </tr>
    }

</table>
